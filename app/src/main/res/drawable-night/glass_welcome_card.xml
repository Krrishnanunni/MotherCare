<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark mode stronger shadow -->
    <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    
    <!-- Dark mode glass background -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#30FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Dark mode gradient overlay -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#20FFFFFF"
                android:centerColor="#10F8FAFC"
                android:endColor="#08FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Glass border for dark mode -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#50FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>