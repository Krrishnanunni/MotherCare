<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark mode shadow -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Dark mode glass background -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#25FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Dark mode gradient overlay -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#15FFFFFF"
                android:centerColor="#08F8FAFC"
                android:endColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Glass border for dark mode -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="#40FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>