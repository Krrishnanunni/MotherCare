<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep ocean gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0C4A6E"
                android:centerColor="#075985"
                android:endColor="#0369A1"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Dark depth overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#20000000"
                android:centerColor="#10000000"
                android:endColor="#05000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Underwater shimmer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#050369A1"
                android:centerColor="#03075985"
                android:endColor="#020C4A6E"
                android:type="linear" />
        </shape>
    </item>
</layer-list>