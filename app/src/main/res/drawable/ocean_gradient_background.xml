<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ocean blue gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#F0F9FF"
                android:centerColor="#E0F2FE"
                android:endColor="#0EA5E9"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Soft cloud overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#03FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>