<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger shadow for welcome card -->
    <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    
    <!-- Glass background -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#30FFFFFF"
                android:centerColor="#20F8F9FA"
                android:endColor="#15FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Glass border -->
    <item android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#60FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>