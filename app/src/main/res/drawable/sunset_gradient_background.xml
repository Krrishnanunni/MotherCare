<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sunset gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FFF7ED"
                android:centerColor="#FED7AA"
                android:endColor="#FB923C"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Blue sky tint -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10DBEAFE"
                android:centerColor="#05E0F2FE"
                android:endColor="#03FFF7ED"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Soft atmosphere -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#02FFFFFF" />
        </shape>
    </item>
</layer-list>