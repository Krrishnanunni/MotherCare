<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button shadow -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Glass button background -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#40FC8EAC"
                android:centerColor="#30F472B6"
                android:endColor="#25E11D48"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Light overlay -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#20FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Button border -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#50FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>