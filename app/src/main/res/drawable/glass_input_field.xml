<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Glass background -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Light gradient -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:centerColor="#08F8FAFC"
                android:endColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Glass border -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#30FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>