<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light mode shadow -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Light mode glass background -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#35FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Light gradient overlay -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#25FFFFFF"
                android:centerColor="#15F8F9FA"
                android:endColor="#10FFFFFF"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Glass border -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="#50FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>